<Ui>
	<Script file="Babel.lua"/>
	<Script file="Options.lua"/>
	<Script file="HolyStatsTBC.lua"/>

	<Frame name="HolyStatsFrame" parent="UIParent" movable="true" resizable="true" frameStrata="LOW" toplevel="true" hidden="false">
		<Size>
			<AbsDimension x="100" y="100"/>
		</Size>
		<Backdrop bgFile="Interface\Buttons\WHITE8X8" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="16"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="4" right="4" top="4" bottom="4"/>
			</BackgroundInsets>
		</Backdrop>
		<Anchors>
			<Anchor point="TOPLEFT">
				<Offset>
					<AbsDimension x="0" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="HolyStatsBG">
					<Color r="0.5" g="0.5" b="1.0"/>
					<Size>
						<AbsDimension x="100" y="100"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
						</Anchor>
						<Anchor point="BOTTOMRIGHT">
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="HolyStatsText" inherits="GameFontNormal">
					<Shadow>
          				<Color a="0.5" r="0" g="0" b="1"/>
          				<Offset x="1" y="-1"/>
        			</Shadow>
					<Size>
						<AbsDimension x="100" y="100"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
						</Anchor>
						<Anchor point="BOTTOMRIGHT">
						</Anchor>
					</Anchors>
					<FontHeight>
						<AbsValue val="15"/>
					</FontHeight>
					<Color r="0.8" g="0.8" b="0.8"/>
				</FontString>
				<Scripts>
					<OnMouseDown>
						HolyStats_OnMouseDown(self, button)
					</OnMouseDown>
					<OnMouseUp>
						HolyStats_OnMouseUp(self, button)
					</OnMouseUp>
				</Scripts>
			</Layer>
		</Layers>
		<Scripts>
			<OnUpdate>
				HolyStats_OnUpdate(self, elapsed)
			</OnUpdate>
			<!-- <OnEvent>
				MonkeySpeed_OnEvent(self, event, ...)
			</OnEvent> -->
			<OnMouseDown>
				HolyStats_OnMouseDown(self, button)
			</OnMouseDown>
			<OnMouseUp>
				HolyStats_OnMouseUp(self, button)
			</OnMouseUp>
		</Scripts>
	</Frame>
</Ui>